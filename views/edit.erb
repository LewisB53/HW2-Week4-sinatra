
<form  action="/pizzas/<%=@pizza.id%>" method= "POST" >
<label for = "first_name">First Name:</label>
<input id = "first_name" value = "<%= @pizza.first_name %>" type = "text" name = "first_name"/>


<label for = "last_name">Last Name:</label>
<input id = "last_name" value = "<%= @pizza.last_name %>"  type = "text" name = "last_name"/>


<label for = "pizza_select">Select a Pizza:</label>
<select id = "pizza_select" name = "topping">
  <option value = "Margherita" <%= "selected" if @pizza.topping == "Margherita" %>> Margherita</option>
  <option value="Pepperoni" <%= "selected" if @pizza.topping == "Pepperoni" %>>Pepperoni</option>
</select>


<label for = "quantity">How many?:</label>
<input id = "quantity" value = "<%= @pizza.quantity %>" type = "number" name = "quantity"/>


<input type = "submit" value="Update Order"/>
</form>